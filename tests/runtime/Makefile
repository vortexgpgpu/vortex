all:
	$(MAKE) -C hello	
	$(MAKE) -C fibonacci
	$(MAKE) -C simple

run-simx:
	$(MAKE) -C hello run-simx
	$(MAKE) -C fibonacci run-simx
	$(MAKE) -C simple run-simx

run-rtlsim:
	$(MAKE) -C hello run-rtlsim
	$(MAKE) -C fibonacci run-rtlsim
	$(MAKE) -C simple run-rtlsim

clean:
	$(MAKE) -C hello clean
	$(MAKE) -C fibonacci clean
	$(MAKE) -C simple clean

